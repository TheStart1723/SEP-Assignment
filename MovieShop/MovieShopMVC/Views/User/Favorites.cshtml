@model IEnumerable<ApplicationCore.Models.MovieCardResponseModel>

@{
    ViewData["Title"] = "Favorite Movies";
}

<div class="container-fluid">
    <div class="row">
        @foreach (var favoritedMovie in Model)
        {
            <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                <partial model="favoritedMovie" name="_MovieCard" />
            </div>
        }
    </div>
</div>